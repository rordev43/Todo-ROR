<% if notice.present? %>
  <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice">
    <%= notice %>
  </p>
<% end %>

<div class='px-5'>
  <h1 class="font-bold text-2xl">Task Manager</h1>
  <div class="mt-4 mx-auto flex flex-row justify-between">
    <div class="">
      <%= render "form", task: @task %>
    </div>
    <div class="">
      <%= form_with(url: tasks_path, method: "GET", id: "search-form") do |form| %>
        <%= form.text_field :query, id: "search-input", placeholder:"Search", class: "inline-block w-96 px-3 py-2 mt-2 shadow rounded-md border border-gray-200 outline-none" %>
        <%= form.submit 'Search', class: "btn py-2 ml-2 bg-green-600 text-white" %>
      <% end %>
    </div>
  </div>

  <div id="tasks">
    <h1 class="font-bold text-lg mb-7">Tasks</h1>
    <div class="" data-controller="tasks">
    <ul id="tasks-list" data-turbo-frame="tasks_list">
      <%= render @tasks %>
    </ul>
    </div>
  </div>
<div>
<div class='text-center p-7'>
  <%= paginate @tasks %>
</div>

